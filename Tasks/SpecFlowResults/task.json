{
    "id": "ed03375f-82f1-4c04-b46d-e4182cd9cafe",
    "name": "SpecFlowFeatures",
    "friendlyName": "SpecFlowFeatures",
    "description": "Exports SpecFlow features definition from the project workitems",
    "helpMarkDown": "",
    "category": "Build",
    "author": "kneradovsky",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 0
    },
    "instanceNameFormat": "Export features from $(queryname)",
    "groups": [
        {
            "name": "access",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "suites",
            "type": "string",
            "label": "Test suites to export",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "List of comma-separated test suites to export as SpecFlow features"
        },        
        {
            "name": "destination",
            "type": "path",
            "label": "Destination path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Workitems named query to export description"
        },
        {
            "name": "cleanDestination",
            "type": "boolean",
            "label": "Clean destination",
            "defaultValue": true,
            "required": true,
            "helpMarkDown": "Clean up destination before export"
        },        
        {
            "name": "apiurl",
            "type": "string",
            "label": "API Url",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "REST API url"
        },
        {
            "name": "authtype",
            "type": "pick list",
            "label": "Authentication type",
            "defaultValue": "PAT",
            "required": true,
            "helpMarkDown": "Authentication type",
            "options" : {
                "PAT" : "Personal authentication token",
                "NTLM" : "NTLM Authentication",
                "BASIC" : "Basic Authentication"
            }
        },
        {
            "name": "PAT",
            "type": "password",
            "label": "Personal Authentication token",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Personal access token to connect to the api, if you're using PAT auth type"
        },
        {
            "name": "Username",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Username to connect to the api, if you're using NTLM/Basic auth type"
        },
        {
            "name": "Password",
            "type": "password",
            "label": "Password",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Password to connect to the api, if you're using NTLM/Basic auth type"
        }
        
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    },
    "messages" : {
        "FeatureTemplate" : "#language: en-US \n Feature: %s \n ",
        "ScenarioTemplate" : "Scenario: %s_%s \n %s \n "        
    }

}